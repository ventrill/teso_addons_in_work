<GuiXml>
    <Controls>
        <TopLevelControl name="RDLMainWindow" hidden="true" mouseEnabled="true" movable="true" clampedToScreen="true">
            <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="BOTTOM" offsetX="0" offsetY="-128"/>
            <Dimensions x="1260" y="800"/>
            <OnShow>
                SetGameCameraUIMode(true)
            </OnShow>
            <OnHide>
                SetGameCameraUIMode(false)
            </OnHide>

            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_ThinBackdrop" edgeColor="88FFFFFF"/>
                <Control name="$(parent)Title">
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="TOPRIGHT"/>
                    <Dimensions y="30"/>
                    <Controls>
                        <Label name="$(parent)Label" font="ZoFontGameLarge" color="CCAA1A" wrapMode="ELLIPSIS"
                               mouseEnabled="true" text="Items On Sale">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="17"
                                    offsetY="7"/>
                            <Dimensions x="220" y="28"/>
                        </Label>
                        <Control name="RDL_DropdownMajor" inherits="ZO_ScrollableComboBox" mouseEnabled="true">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" offsetX="15"
                                    offsetY="-2"/>
                            <Dimensions x="275" y="28"/>
                            <OnMouseEnter>GSMM.DropdownShowTooltip(self, "major", true)</OnMouseEnter>
                            <OnMouseExit>GSMM.DropdownHideTooltip(self)</OnMouseExit>
                        </Control>
                        <Control name="RDL_DropdownZone" inherits="ZO_ScrollableComboBox" mouseEnabled="true">
                            <Anchor point="TOPLEFT" relativeTo="RDL_DropdownMajor" relativePoint="TOPRIGHT"
                                    offsetX="69"/>
                            <Dimensions x="274" y="28"/>
                            <OnMouseEnter>GSMM.DropdownShowTooltip(self, "zone", true)</OnMouseEnter>
                            <OnMouseExit>GSMM.DropdownHideTooltip(self)</OnMouseExit>
                        </Control>
                        <Control name="RDL_DropdownSetType" inherits="ZO_ScrollableComboBox" mouseEnabled="true">
                            <Anchor point="TOPLEFT" relativeTo="RDL_DropdownZone" relativePoint="TOPRIGHT"
                                    offsetX="69"/>
                            <Dimensions x="275" y="28"/>
                            <OnMouseEnter>GSMM.DropdownShowTooltip(self, "settype", true)</OnMouseEnter>
                            <OnMouseExit>GSMM.DropdownHideTooltip(self)</OnMouseExit>
                        </Control>
                        <Button name="$(parent)Close">
                            <Anchor point="TOPRIGHT" offsetX="-5" offsetY="5"/>
                            <OnClicked>GSMM.toggleOnSaleWindow()</OnClicked>
                            <Dimensions x="25" y="25"/>
                            <Textures normal="/esoui/art/buttons/decline_up.dds"
                                      pressed="/esoui/art/buttons/decline_down.dds"
                                      mouseOver="/esoui/art/buttons/decline_over.dds"/>
                        </Button>
                    </Controls>
                </Control>
                <Control name="$(parent)Headers">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Title" relativePoint="BOTTOMLEFT" offsetX="15"
                            offsetY="20"/>
                    <Dimensions y="32"/>
                    <Controls>
                        <Control name="$(parent)itemLink" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[1], "itemLink", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 1)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 1)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT"/>
                            <Dimensions x="300" y="32"/>
                        </Control>
                        <Control name="$(parent)Zone" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[2], "Zone",
                                ZO_SORT_ORDER_UP,TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 2)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 2)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)itemLink" relativePoint="TOPRIGHT"/>
                            <Dimensions x="170" y="32"/>
                        </Control>
                        <Control name="$(parent)Location" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[3], "Location", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 3)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 3)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Zone" relativePoint="TOPRIGHT"/>
                            <Dimensions x="220" y="32"/>
                        </Control>
                        <Control name="$(parent)Diff" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[4], "Diff", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 4)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 4)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Location" relativePoint="TOPRIGHT"/>
                            <Dimensions x="64" y="32"/>
                        </Control>
                        <Control name="$(parent)Lore" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[5], "Lore", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 5)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 5)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Diff" relativePoint="TOPRIGHT"/>
                            <Dimensions x="64" y="32"/>
                        </Control>
                        <Control name="$(parent)Dug" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[6], "Dug", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 6)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 6)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Lore" relativePoint="TOPRIGHT"/>
                            <Dimensions x="64" y="32"/>
                        </Control>
                        <Control name="$(parent)Set" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[7], "Set", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 7)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 7)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Dug" relativePoint="TOPRIGHT"/>
                            <Dimensions x="220" y="32"/>
                        </Control>
                        <Control name="$(parent)Expiration" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GSMM.SORTHEADER_NAMES[8], "Expiration", ZO_SORT_ORDER_UP,
                                TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                GSMM.HeaderMouseEnter(self, 8)
                            </OnMouseEnter>
                            <OnMouseExit>
                                GSMM.HeaderMouseExit(self, 8)
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Set" relativePoint="TOPRIGHT"/>
                            <Dimensions x="110" y="32"/>
                        </Control>
                    </Controls>
                </Control>
                <Control name="$(parent)List" inherits="ZO_ScrollList">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" offsetX="-12" offsetY="-12"/>
                </Control>
            </Controls>
        </TopLevelControl>

        <Button name="RDLUnitRow" virtual="true">
            <Dimensions y="30"/>
            <Anchor point="RIGHT" relativeTo="$(parent)"/>
            <Controls>
                <Label name="$(parent)itemLink" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)"/>
                    <Dimensions x="300" y="32"/>
                </Label>
                <Label name="$(parent)Zone" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)itemLink" relativePoint="TOPRIGHT"/>
                    <Dimensions x="170" y="32"/>
                </Label>
                <Label name="$(parent)Location" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Zone" relativePoint="TOPRIGHT"/>
                    <Dimensions x="220" y="32"/>
                </Label>
                <Label name="$(parent)Diff" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Location" relativePoint="TOPRIGHT"/>
                    <Dimensions x="64" y="32"/>
                </Label>
                <Label name="$(parent)Lore" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Diff" relativePoint="TOPRIGHT"/>
                    <Dimensions x="64" y="32"/>
                </Label>
                <Label name="$(parent)Dug" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Lore" relativePoint="TOPRIGHT"/>
                    <Dimensions x="64" y="32"/>
                </Label>
                <Label name="$(parent)Set" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Dug" relativePoint="TOPRIGHT"/>
                    <Dimensions x="220" y="32"/>
                </Label>
                <Label name="$(parent)Expiration" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Set" relativePoint="TOPRIGHT"/>
                    <Dimensions x="110" y="32"/>
                </Label>
            </Controls>
        </Button>
    </Controls>
</GuiXml>