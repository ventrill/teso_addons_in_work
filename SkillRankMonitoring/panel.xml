<GuiXml>
    <Controls>
        <TopLevelControl name="SRM_OnPanelWindow" hidden="true" mouseEnabled="true" movable="true"
                         clampedToScreen="true">
            <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="BOTTOM" offsetX="0" offsetY="-128"/>
            <Dimensions x="1100" y="600"/>
            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_ThinBackdrop" edgeColor="88FFFFFF"/>
                <Control name="$(parent)Title">
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="TOPRIGHT"/>
                    <Dimensions y="30"/>
                    <Controls>
                        <Label name="$(parent)Label" font="ZoFontGameLarge" color="CCAA1A" wrapMode="ELLIPSIS"
                               mouseEnabled="true" text="On Panel Info">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="17"
                                    offsetY="7"/>
                            <Dimensions x="220" y="28"/>
                        </Label>
                        <Button name="$(parent)Refresh">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="TOPRIGHT" offsetX="69"/>
                            <Dimensions x="100" y="28"/>
                            <OnClicked>SkillRankMonitoring.refreshOnPanelWindow()</OnClicked>
                        </Button>
                        <Button name="$(parent)Close">
                            <Anchor point="TOPRIGHT" offsetX="-5" offsetY="5"/>
                            <OnClicked>SkillRankMonitoring.toggleOnPanelWindow()</OnClicked>
                            <Dimensions x="25" y="25"/>
                            <Textures normal="/esoui/art/buttons/decline_up.dds"
                                      pressed="/esoui/art/buttons/decline_down.dds"
                                      mouseOver="/esoui/art/buttons/decline_over.dds"/>
                        </Button>
                    </Controls>
                </Control>
                <Control name="$(parent)Headers">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Title" relativePoint="BOTTOMLEFT" offsetX="15"
                            offsetY="20"/>
                    <Dimensions y="32"/>
                    <Controls>
                        <Control name="$(parent)AbilityName" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self,"AbilityName","AbilityName",ZO_SORT_ORDER_UP,TEXT_ALIGN_CENTER,"ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                SkillRankMonitoring.HeaderMouseEnter(self, "AbilityName")
                            </OnMouseEnter>
                            <OnMouseExit>
                                SkillRankMonitoring.HeaderMouseExit(self, "AbilityName")
                            </OnMouseExit>
                            <Anchor point="TOPLEFT"/>
                            <Dimensions x="300" y="32"/>
                        </Control>
                        <Control name="$(parent)AbilityRank" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self,GSMM.SORTHEADER_NAMES["AbilityRank"],"AbilityRank",ZO_SORT_ORDER_UP,TEXT_ALIGN_CENTER,"ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                SkillRankMonitoring.HeaderMouseEnter(self, "AbilityRank")
                            </OnMouseEnter>
                            <OnMouseExit>
                                SkillRankMonitoring.HeaderMouseExit(self, "AbilityRank")
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)AbilityName" relativePoint="TOPRIGHT"/>
                            <Dimensions x="75" y="32"/>
                        </Control>
                        <Control name="$(parent)StartXP" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self,GSMM.SORTHEADER_NAMES["StartXP"],"StartXP",ZO_SORT_ORDER_UP,TEXT_ALIGN_CENTER,"ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                SkillRankMonitoring.HeaderMouseEnter(self, "StartXP")
                            </OnMouseEnter>
                            <OnMouseExit>
                                SkillRankMonitoring.HeaderMouseExit(self, "StartXP")
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)AbilityRank" relativePoint="TOPRIGHT"/>
                            <Dimensions x="150" y="32"/>
                        </Control>
                        <Control name="$(parent)EndXP" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self,GSMM.SORTHEADER_NAMES["EndXP"],"EndXP",ZO_SORT_ORDER_UP,TEXT_ALIGN_CENTER,"ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                SkillRankMonitoring.HeaderMouseEnter(self, "EndXP")
                            </OnMouseEnter>
                            <OnMouseExit>
                                SkillRankMonitoring.HeaderMouseExit(self, "EndXP")
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)StartXP" relativePoint="TOPRIGHT"/>
                            <Dimensions x="150" y="32"/>
                        </Control>
                        <Control name="$(parent)CurrentXP" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self,GSMM.SORTHEADER_NAMES["CurrentXP"],"CurrentXP",ZO_SORT_ORDER_UP,TEXT_ALIGN_CENTER,"ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                SkillRankMonitoring.HeaderMouseEnter(self, "CurrentXP")
                            </OnMouseEnter>
                            <OnMouseExit>
                                SkillRankMonitoring.HeaderMouseExit(self, "CurrentXP")
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)EndXP" relativePoint="TOPRIGHT"/>
                            <Dimensions x="150" y="32"/>
                        </Control>
                        <Control name="$(parent)LeftExp" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self,GSMM.SORTHEADER_NAMES["LeftExp"],"LeftExp",ZO_SORT_ORDER_UP,TEXT_ALIGN_CENTER,"ZoFontGameLargeBold")
                            </OnInitialized>
                            <OnMouseEnter>
                                SkillRankMonitoring.HeaderMouseEnter(self, "LeftExp")
                            </OnMouseEnter>
                            <OnMouseExit>
                                SkillRankMonitoring.HeaderMouseExit(self, "LeftExp")
                            </OnMouseExit>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)CurrentXP" relativePoint="TOPRIGHT"/>
                            <Dimensions x="150" y="32"/>
                        </Control>
                    </Controls>
                </Control>
                <Control name="$(parent)List" inherits="ZO_ScrollList">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT"/>
                    <Anchor point="BOTTOMRIGHT" offsetX="-12" offsetY="-12"/>
                </Control>
            </Controls>
        </TopLevelControl>

        <Button name="SRM_OnPanelWindowUnitRow" virtual="true">
            <Dimensions y="30"/>
            <Anchor point="RIGHT" relativeTo="$(parent)"/>
            <Controls>
                <Label name="$(parent)AbilityName" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)"/>
                    <Dimensions x="300" y="32"/>
                </Label>
                <Label name="$(parent)AbilityRank" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)AbilityName" relativePoint="TOPRIGHT"/>
                    <Dimensions x="75" y="32"/>
                </Label>
                <Label name="$(parent)StartXP" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)AbilityRank" relativePoint="TOPRIGHT"/>
                    <Dimensions x="150" y="32"/>
                </Label>
                <Label name="$(parent)EndXP" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)StartXP" relativePoint="TOPRIGHT"/>
                    <Dimensions x="150" y="32"/>
                </Label>
                <Label name="$(parent)CurrentXP" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)EndXP" relativePoint="TOPRIGHT"/>
                    <Dimensions x="150" y="32"/>
                </Label>
                <Label name="$(parent)LeftExp" font="ZoFontWinH4" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)CurrentXP" relativePoint="TOPRIGHT"/>
                    <Dimensions x="150" y="32"/>
                </Label>
            </Controls>
        </Button>
    </Controls>

</GuiXml>