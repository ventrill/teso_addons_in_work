<GuiXml>
    <Controls>
        <TopLevelControl name="WMP_WindowSwitcher" mouseEnabled="true" clampedToScreen="true" hidden="true" tier="HIGH">
            <Dimensions x="180" y="285"/>
            <Anchor point="128" relativePoint="128" relativeTo="GuiRoot"/>
            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop"/>
                <Button name="$(parent)Close" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="CENTER">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"/>
                    <Dimensions x="20" y="20"/>
                    <Textures normal="/esoui/art/buttons/decline_up.dds" pressed="/esoui/art/buttons/decline_down.dds" mouseOver="/esoui/art/buttons/decline_over.dds"/>
                    <OnClicked>WMP_WindowSwitcher:SetHidden(true)</OnClicked>
                </Button>
                <Label name="$(parent)Wind0" text="Win0" mouseEnabled="true" font="ZoFontChat" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
                    <OnMouseUp>MWP.onSelectWindowClick(0)</OnMouseUp>
                    <OnMouseEnter>MWP.highlightButton(self, true)</OnMouseEnter>
                    <OnMouseExit>MWP.highlightButton(self, false)</OnMouseExit>
                </Label>
                <Label name="$(parent)Wind1" text="Win1" mouseEnabled="true" font="ZoFontChat" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Wind0" relativePoint="BOTTOMLEFT"/>
                    <OnMouseUp>MWP.onSelectWindowClick(1)</OnMouseUp>
                    <OnMouseEnter>MWP.highlightButton(self, true)</OnMouseEnter>
                    <OnMouseExit>MWP.highlightButton(self, false)</OnMouseExit>
                </Label>
                <Label name="$(parent)Wind2" text="Win2" mouseEnabled="true" font="ZoFontChat" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Wind1" relativePoint="BOTTOMLEFT"/>
                    <OnMouseUp>MWP.onSelectWindowClick(2)</OnMouseUp>
                    <OnMouseEnter>MWP.highlightButton(self, true)</OnMouseEnter>
                    <OnMouseExit>MWP.highlightButton(self, false)</OnMouseExit>
                </Label>

            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>